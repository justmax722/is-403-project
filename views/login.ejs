<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - IS Event Calendar</title>
  <!-- Bootstrap 5.3.3 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/custom.css">
  <style>
    body {
      background: linear-gradient(135deg, #c65d2f 0%, #b8835f 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .login-card {
      max-width: 450px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.25);
    }
  </style>
</head>
<body>
  <div class="login-card card">
    <div class="card-body p-5">
      <div class="text-center mb-4">
        <i class="bi bi-calendar-event text-primary display-4"></i>
        <h2 class="card-title mt-3 mb-2">IS Event Calendar</h2>
        <p class="text-muted">Sign in to your account</p>
      </div>

      <% const activeFormValue = typeof activeForm !== 'undefined' ? activeForm : 'login'; %>
      
      <div class="btn-group w-100 mb-4" role="group">
        <input type="radio" class="btn-check" name="formType" id="loginRadio" <%= activeFormValue === 'login' ? 'checked' : '' %> autocomplete="off">
        <label class="btn btn-outline-primary <%= activeFormValue === 'login' ? 'active' : '' %>" for="loginRadio">
          <i class="bi bi-box-arrow-in-right me-1"></i>Login
        </label>
        
        <input type="radio" class="btn-check" name="formType" id="signupRadio" <%= activeFormValue === 'signup' ? 'checked' : '' %> autocomplete="off">
        <label class="btn btn-outline-primary <%= activeFormValue === 'signup' ? 'active' : '' %>" for="signupRadio">
          <i class="bi bi-person-plus me-1"></i>Sign Up
        </label>
      </div>
      <% const loginError = typeof error_message !== 'undefined' && error_message ? error_message : ''; %>
      <% const signupError = typeof signup_error_message !== 'undefined' && signup_error_message ? signup_error_message : ''; %>

      <!-- Login Form -->
      <div class="form-panel <%= activeFormValue === 'login' ? '' : 'd-none' %>" data-panel="login">
        <% if (loginError) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i><%= loginError %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>
        <form action="/login" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-envelope"></i></span>
              <input type="email" class="form-control" id="email" name="email" required autofocus placeholder="Enter your email">
            </div>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-lock"></i></span>
              <input type="password" class="form-control" id="password" name="password" required placeholder="Enter your password">
            </div>
          </div>
          <button type="submit" class="btn btn-primary w-100 mb-3">
            <i class="bi bi-box-arrow-in-right me-2"></i>Login
          </button>
        </form>
      </div>

      <!-- Signup Form -->
      <div class="form-panel <%= activeFormValue === 'signup' ? '' : 'd-none' %>" data-panel="signup">
        <% if (signupError) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i><%= signupError %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>
        <form action="/signup" method="POST">
          <div class="mb-3">
            <label for="signupEmail" class="form-label">Email</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-envelope"></i></span>
              <input type="email" class="form-control" id="signupEmail" name="email" required placeholder="you@example.com">
            </div>
          </div>
          <div class="mb-3">
            <label for="signupPassword" class="form-label">Password</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-lock"></i></span>
              <input type="password" class="form-control" id="signupPassword" name="password" required minlength="6" placeholder="Choose a password">
            </div>
            <div class="form-text">Minimum 6 characters</div>
          </div>
          <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
              <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required placeholder="Re-enter your password">
            </div>
          </div>
          <button type="submit" class="btn btn-primary w-100 mb-3">
            <i class="bi bi-person-plus me-2"></i>Sign Up
          </button>
        </form>
      </div>

      <div class="text-center mt-4 pt-4 border-top">
        <a href="/events" class="text-decoration-none">
          <i class="bi bi-arrow-left me-1"></i>View public events without logging in
        </a>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const toggleButtons = document.querySelectorAll('input[name="formType"]');
      const panels = document.querySelectorAll('.form-panel');
      const labels = document.querySelectorAll('.btn-group label');

      const setActive = (target) => {
        // Show/hide panels
        panels.forEach(panel => {
          panel.classList.toggle('d-none', panel.dataset.panel !== target);
        });
        
        // Update button styles
        labels.forEach(label => {
          label.classList.remove('active');
        });
        const activeLabel = target === 'login' 
          ? document.querySelector('label[for="loginRadio"]')
          : document.querySelector('label[for="signupRadio"]');
        if (activeLabel) {
          activeLabel.classList.add('active');
        }
      };

      toggleButtons.forEach(btn => {
        btn.addEventListener('change', function() {
          const target = this.id === 'loginRadio' ? 'login' : 'signup';
          setActive(target);
        });
      });

      // Set initial state
      setActive('<%= activeFormValue %>');
    });
  </script>
</body>
</html>
