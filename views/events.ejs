<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>IS Event Calendar</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    .layout {
      display: flex;
      width: 100%;
      min-height: 100vh;
    }

    .sidebar {
      width: 250px;
      background: #f4f4f4;
      padding: 20px;
      border-right: 1px solid #ddd;
      position: sticky;
      top: 0;
      height: 100vh;
      overflow-y: auto;
    }

    .sidebar h3 {
      margin-top: 0;
    }

    .sidebar label {
      display: block;
      margin-top: 15px;
      font-weight: bold;
    }

    .sidebar input,
    .sidebar select {
      width: 100%;
      padding: 6px;
      margin-top: 5px;
      box-sizing: border-box;
    }

    .sidebar button {
      width: 100%;
      padding: 8px;
      margin-top: 10px;
      background: #667eea;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 0.9em;
    }

    .sidebar button:hover {
      background: #5568d3;
    }

    .category-checkboxes {
      max-height: 200px;
      overflow-y: auto;
      border: 1px solid #ddd;
      padding: 8px;
      background: white;
      margin-top: 5px;
    }

    .category-checkboxes label {
      display: flex;
      align-items: center;
      margin-top: 8px;
      font-weight: normal;
      cursor: pointer;
    }

    .category-checkboxes input[type="checkbox"] {
      width: auto;
      margin-right: 8px;
      margin-top: 0;
    }

    .content {
      flex: 1;
      padding: 20px;
    }

    .card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 20px;
    }

    .card-list {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .card {
      border: 1px solid #ddd;
      border-radius: 6px;
      overflow: hidden;
      background: #fff;
      display: flex;
      flex-direction: column;
    }

    .card-list .card {
      flex-direction: row;
      max-width: 100%;
    }

    .card-list .card-header {
      width: 300px;
      min-width: 300px;
      flex-shrink: 0;
    }

    .card-list .card-body {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .card-header {
      width: 100%;
      height: 150px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.2em;
      font-weight: bold;
      text-align: center;
      padding: 10px;
      box-sizing: border-box;
    }

    .card-list .card-header {
      height: 100%;
    }

    .card-body {
      padding: 15px;
    }

    .card-body h3 {
      margin: 0 0 10px;
      font-size: 1.2em;
    }

    .card-body p {
      margin: 5px 0;
      font-size: 0.9em;
    }

    .card-list .card-body {
      padding: 20px;
    }

    .card-list .card-body h3 {
      font-size: 1.4em;
      margin-bottom: 15px;
    }

    .filter-actions {
      margin-top: 15px;
    }

    .filter-actions button {
      margin-bottom: 5px;
    }

    .clear-filters {
      background: #dc3545 !important;
    }

    .clear-filters:hover {
      background: #c82333 !important;
    }
  </style>
</head>
<body>
  <div class="layout">
    <!-- Sidebar -->
    <aside class="sidebar">
      <h3>Filters</h3>
      
      <!-- Date Filter -->
      <form id="filterForm" method="GET" action="/events">
        <label>Start Date</label>
        <input type="date" name="startDate" id="startDate" value="<%= currentFilters.startDate %>">
        
        <label>End Date</label>
        <input type="date" name="endDate" id="endDate" value="<%= currentFilters.endDate %>">
        
        <!-- Category Filter -->
        <label>Category</label>
        <button type="button" id="selectAllBtn" onclick="toggleSelectAll()">Select All</button>
        <div class="category-checkboxes">
          <% if (eventTypes && eventTypes.length > 0) { %>
            <% eventTypes.forEach(type => { %>
              <% 
                // Check if this category is selected (handle both string and number comparisons)
                const typeIdStr = type.eventtypeid.toString();
                const isChecked = currentFilters.categories && currentFilters.categories.length > 0 
                  ? currentFilters.categories.some(cat => cat.toString() === typeIdStr || parseInt(cat) === type.eventtypeid)
                  : false;
              %>
              <label>
                <input type="checkbox" 
                       name="categories" 
                       value="<%= type.eventtypeid %>" 
                       <%= isChecked ? 'checked' : '' %>>
                <%= type.eventtypename %>
              </label>
            <% }) %>
          <% } else { %>
            <p>No categories available</p>
          <% } %>
        </div>
        
        <!-- Format Filter -->
        <label>Format</label>
        <select name="format" id="format" onchange="changeFormat(this.value)">
          <option value="grid" <%= currentFilters.format === 'grid' ? 'selected' : '' %>>Grid</option>
          <option value="list" <%= currentFilters.format === 'list' ? 'selected' : '' %>>List</option>
        </select>
        
        <div class="filter-actions">
          <button type="submit">Apply Filters</button>
          <button type="button" class="clear-filters" onclick="clearFilters()">Clear Filters</button>
        </div>
      </form>
    </aside>

    <!-- Main Content -->
    <main class="content">
      <h2>Upcoming Events</h2>
      <div id="eventsContainer" class="<%= currentFilters.format === 'list' ? 'card-list' : 'card-grid' %>">
        <% if (events && events.length > 0) { %>
          <% events.forEach(event => { %>
            <div class="card">
              <div class="card-header">
                <%= event.eventname %>
              </div>
              <div class="card-body">
                <h3><%= event.eventname %></h3>
                <p><strong>Date:</strong> 
                  <% if (event.starttime) { %>
                    <%= new Date(event.starttime).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %>
                  <% } else { %>
                    TBD
                  <% } %>
                </p>
                <p><strong>Time:</strong> 
                  <% if (event.starttime && event.endtime) { %>
                    <%= new Date(event.starttime).toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' }) %> - 
                    <%= new Date(event.endtime).toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' }) %>
                  <% } else { %>
                    TBD
                  <% } %>
                </p>
                <% if (event.eventlocation) { %>
                  <p><strong>Location:</strong> <%= event.eventlocation %></p>
                <% } %>
                <% if (event.eventhost) { %>
                  <p><strong>Host:</strong> <%= event.eventhost %></p>
                <% } %>
                <% if (event.eventtypename) { %>
                  <p><strong>Type:</strong> <%= event.eventtypename %></p>
                <% } %>
                <% if (event.eventdescription) { %>
                  <p><%= event.eventdescription %></p>
                <% } %>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div style="grid-column: 1 / -1; text-align: center; padding: 40px;">
            <p>No events found matching your filters. Try adjusting your search criteria.</p>
          </div>
        <% } %>
      </div>
    </main>
  </div>

  <script>
    // Change format display without page reload
    function changeFormat(format) {
      const container = document.getElementById('eventsContainer');
      if (format === 'list') {
        container.className = 'card-list';
      } else {
        container.className = 'card-grid';
      }
      
      // Update URL to persist format selection (preserve other filters)
      const url = new URL(window.location);
      url.searchParams.set('format', format);
      // Keep existing filters in URL
      window.history.pushState({}, '', url);
    }
    
    // Submit form with all selected categories
    document.getElementById('filterForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const formData = new URLSearchParams();
      
      // Add date filters
      const startDate = document.getElementById('startDate').value;
      const endDate = document.getElementById('endDate').value;
      if (startDate) formData.append('startDate', startDate);
      if (endDate) formData.append('endDate', endDate);
      
      // Add selected categories
      const checkboxes = document.querySelectorAll('input[name="categories"]:checked');
      checkboxes.forEach(cb => {
        formData.append('categories', cb.value);
      });
      
      // Add format
      const format = document.getElementById('format').value;
      formData.append('format', format);
      
      // Redirect with filters
      window.location.href = '/events?' + formData.toString();
    });

    // Toggle Select All / Deselect All
    function toggleSelectAll() {
      const checkboxes = document.querySelectorAll('input[name="categories"][type="checkbox"]');
      const selectAllBtn = document.getElementById('selectAllBtn');
      const allChecked = Array.from(checkboxes).every(cb => cb.checked);
      
      checkboxes.forEach(cb => {
        cb.checked = !allChecked;
      });
      
      updateSelectAllButton();
    }

    // Update Select All button text based on current state
    function updateSelectAllButton() {
      const checkboxes = document.querySelectorAll('input[name="categories"][type="checkbox"]');
      const selectAllBtn = document.getElementById('selectAllBtn');
      const allChecked = checkboxes.length > 0 && Array.from(checkboxes).every(cb => cb.checked);
      const someChecked = Array.from(checkboxes).some(cb => cb.checked);
      
      if (allChecked) {
        selectAllBtn.textContent = 'Deselect All';
      } else {
        selectAllBtn.textContent = 'Select All';
      }
    }

    // Clear all filters (but keep format)
    function clearFilters() {
      const format = document.getElementById('format').value || 'grid';
      window.location.href = '/events?format=' + format;
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
      updateSelectAllButton();
      
      // Update select all button when checkboxes change
      document.querySelectorAll('input[name="categories"][type="checkbox"]').forEach(cb => {
        cb.addEventListener('change', function() {
          updateSelectAllButton();
        });
      });
    });
  </script>
</body>
</html>
