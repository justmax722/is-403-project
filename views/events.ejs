<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>IS Event Calendar</title>
  <!-- Bootstrap 5.3.3 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/custom.css">
  <style>
    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      background-color: #faf8f5;
    }
    .main-content {
      flex: 1;
    }
    .card-header-image {
      min-height: 200px;
    }
    .card-list-view .card {
      flex-direction: row;
    }
    .card-list-view .card-header-image {
      width: 300px;
      min-width: 300px;
      flex-shrink: 0;
    }
    @media (max-width: 768px) {
      .card-list-view .card {
        flex-direction: column;
      }
      .card-list-view .card-header-image {
        width: 100%;
        min-width: 100%;
      }
    }
  </style>
</head>
<body>
  <% 
    const logoutReturnUrl = typeof currentUrl === 'string' ? currentUrl : '/events'; 
    const userRoleValue = typeof userRole !== 'undefined' ? userRole : '';
    const submitTarget = userRoleValue === 'admin' ? '/admin/dashboard' : (userRoleValue === 'submitter' ? '/submit-event' : '/signup');
  %>
  
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark navbar-gradient shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/">
        <i class="bi bi-calendar-event me-2"></i>IS Event Calendar
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/events">
              <i class="bi bi-calendar3 me-1"></i>Events
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= submitTarget %>">
              <i class="bi bi-plus-circle me-1"></i>Submit Event
            </a>
          </li>

          <% if (typeof isLoggedIn !== 'undefined' && isLoggedIn) { %>
            <li class="nav-item">
              <a class="nav-link" href="/admin/dashboard">
                <i class="bi bi-speedometer2 me-1"></i>Admin Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout?next=<%= encodeURIComponent(logoutReturnUrl) %>">
                <i class="bi bi-box-arrow-right me-1"></i>Logout
              </a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">
                <i class="bi bi-box-arrow-in-right me-1"></i>Login
              </a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="main-content">
    <div class="container-fluid">
      <div class="row g-0">
        <!-- Sidebar Filters -->
        <aside class="col-lg-3 col-xl-2 bg-light border-end p-3">
          <h5 class="mb-3">
            <i class="bi bi-funnel me-2"></i>Filters
          </h5>
          
          <form id="filterForm" method="GET" action="/events">
            <div class="input-group mb-3">
              <input type="search"
                     name="search"
                     id="searchInput"
                     class="form-control"
                     placeholder="Search events"
                     aria-label="Search events"
                     value="<%= currentFilters.search %>">
              <button type="submit" class="btn btn-outline-secondary search-icon-btn" aria-label="Search">
                <i class="bi bi-search"></i>
              </button>
            </div>
            <input type="hidden" name="format" id="format" value="<%= currentFilters.format %>">
            <input type="hidden" name="sort" id="sort" value="<%= currentFilters.sort %>">

            <div class="mb-3">
              <label for="startDate" class="form-label fw-bold">
                <i class="bi bi-calendar-event me-1"></i>Start Date
              </label>
              <input type="date" name="startDate" id="startDate" class="form-control form-control-sm" value="<%= currentFilters.startDate %>">
            </div>
            
            <div class="mb-3">
              <label for="endDate" class="form-label fw-bold">
                <i class="bi bi-calendar-x me-1"></i>End Date
              </label>
              <input type="date" name="endDate" id="endDate" class="form-control form-control-sm" value="<%= currentFilters.endDate %>">
            </div>
            
            <!-- Category Filter -->
            <div class="mb-3">
              <label class="form-label fw-bold">
                <i class="bi bi-tags me-1"></i>Category
              </label>
              <div class="form-check-group">
                <% if (eventTypes && eventTypes.length > 0) { %>
                  <% eventTypes.forEach(type => { %>
                    <% 
                      const typeIdStr = type.eventtypeid.toString();
                      const isChecked = currentFilters.categories && currentFilters.categories.length > 0 
                        ? currentFilters.categories.some(cat => cat.toString() === typeIdStr || parseInt(cat) === type.eventtypeid)
                        : false;
                    %>
                    <div class="form-check">
                      <input class="form-check-input" 
                             type="checkbox" 
                             name="categories" 
                             id="category-<%= type.eventtypeid %>"
                             value="<%= type.eventtypeid %>" 
                             <%= isChecked ? 'checked' : '' %>>
                      <label class="form-check-label" for="category-<%= type.eventtypeid %>">
                        <%= type.eventtypename %>
                      </label>
                    </div>
                  <% }) %>
                <% } else { %>
                  <p class="text-muted small">No categories available</p>
                <% } %>
              </div>
            </div>
            
            <div class="d-grid">
              <button type="button" class="btn btn-secondary btn-sm" onclick="clearFilters()">
                <i class="bi bi-x-circle me-1"></i>Clear Filters
              </button>
            </div>
          </form>
        </aside>

        <!-- Main Content -->
        <main class="col-lg-9 col-xl-10 p-4">
          <!-- Toolbar -->
          <div class="d-flex flex-wrap align-items-center gap-3 mb-4">
            <div class="d-flex align-items-center gap-2">
              <span class="text-muted small text-uppercase fw-bold">View:</span>
              <div class="btn-group" role="group">
                <button type="button"
                        class="btn btn-sm <%= currentFilters.format === 'grid' ? 'btn-primary' : 'btn-outline-primary' %>"
                        data-format-toggle="grid"
                        aria-label="Grid view">
                  <i class="bi bi-grid-3x3-gap me-1"></i>Grid
                </button>
                <button type="button"
                        class="btn btn-sm <%= currentFilters.format === 'list' ? 'btn-primary' : 'btn-outline-primary' %>"
                        data-format-toggle="list"
                        aria-label="List view">
                  <i class="bi bi-list-ul me-1"></i>List
                </button>
              </div>
            </div>
            <div class="d-flex align-items-center gap-2">
              <span class="text-muted small text-uppercase fw-bold">Sort:</span>
              <div class="btn-group" role="group">
                <button type="button"
                        class="btn btn-sm <%= currentFilters.sort === 'asc' ? 'btn-primary' : 'btn-outline-primary' %>"
                        data-sort-toggle="asc"
                        aria-label="Sort ascending">
                  <i class="bi bi-arrow-up me-1"></i>Chronological ↑
                </button>
                <button type="button"
                        class="btn btn-sm <%= currentFilters.sort === 'desc' ? 'btn-primary' : 'btn-outline-primary' %>"
                        data-sort-toggle="desc"
                        aria-label="Sort descending">
                  <i class="bi bi-arrow-down me-1"></i>Chronological ↓
                </button>
              </div>
            </div>
            <% if (events && events.length > 0) { %>
              <div class="ms-auto">
                <span class="badge badge-primary">
                  <i class="bi bi-calendar-check me-1"></i><%= events.length %> event<%= events.length !== 1 ? 's' : '' %>
                </span>
              </div>
            <% } %>
          </div>

          <h2 class="mb-4">
            <i class="bi bi-calendar-check me-2"></i>Upcoming Events
          </h2>
          
          <% if (events && events.length > 9) { %>
            <div class="d-flex gap-2 mb-4">
              <button type="button" class="btn btn-outline-primary" id="showAllBtn" onclick="showAllEvents()">
                <i class="bi bi-arrow-expand me-1"></i>Show All Events
              </button>
              <button type="button" class="btn btn-outline-primary d-none" id="showLessBtn" onclick="showLessEvents()">
                <i class="bi bi-arrow-collapse me-1"></i>Show Less Events
              </button>
            </div>
          <% } %>
          
          <div id="eventsContainer" class="<%= currentFilters.format === 'list' ? 'card-list-view' : '' %>">
            <% if (events && events.length > 0) { %>
              <% if (currentFilters.format === 'list') { %>
                <div class="d-flex flex-column gap-3" id="eventsList">
                  <% events.forEach((event, index) => { %>
                    <div class="card shadow-sm event-item" data-index="<%= index %>" <% if (index >= 9) { %>style="display: none;"<% } %>>
                      <div class="card-body d-flex p-0">
                        <div class="card-header-image bg-primary">
                          <div class="card-header-text text-center p-3">
                            <%= event.eventname %>
                          </div>
                        </div>
                        <div class="flex-grow-1 p-4">
                          <h5 class="card-title mb-3"><%= event.eventname %></h5>
                          <div class="row g-2 mb-2">
                            <div class="col-md-6">
                              <p class="mb-1">
                                <i class="bi bi-calendar3 text-primary me-2"></i>
                                <strong>Date:</strong> 
                                <% if (event.starttime) { %>
                                  <%= new Date(event.starttime).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %>
                                <% } else { %>
                                  TBD
                                <% } %>
                              </p>
                            </div>
                            <div class="col-md-6">
                              <p class="mb-1">
                                <i class="bi bi-clock text-primary me-2"></i>
                                <strong>Time:</strong> 
                                <% if (event.starttime && event.endtime) { %>
                                  <%= new Date(event.starttime).toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' }) %> - 
                                  <%= new Date(event.endtime).toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' }) %>
                                <% } else { %>
                                  TBD
                                <% } %>
                              </p>
                            </div>
                            <% if (event.eventlocation) { %>
                              <div class="col-md-6">
                                <p class="mb-1">
                                  <i class="bi bi-geo-alt text-primary me-2"></i>
                                  <strong>Location:</strong> <%= event.eventlocation %>
                                </p>
                              </div>
                            <% } %>
                            <% if (event.eventhost) { %>
                              <div class="col-md-6">
                                <p class="mb-1">
                                  <i class="bi bi-person text-primary me-2"></i>
                                  <strong>Host:</strong> <%= event.eventhost %>
                                </p>
                              </div>
                            <% } %>
                          </div>
                          <% if (event.eventtypename) { %>
                            <% 
                              const typeClassMap = {
                                'Career': 'badge-career',
                                'Networking': 'badge-networking',
                                'Workshop': 'badge-workshop',
                                'Club Meetings': 'badge-club-meetings',
                                'Social': 'badge-social',
                                'Informational': 'badge-informational',
                                'Other': 'badge-other'
                              };
                              const badgeClass = typeClassMap[event.eventtypename] || 'badge-primary';
                            %>
                            <span class="badge <%= badgeClass %> mb-2"><%= event.eventtypename %></span>
                          <% } %>
                          <% if (event.eventdescription) { %>
                            <p class="card-text mt-2"><%= event.eventdescription %></p>
                          <% } %>
                          <% if (event.eventurl) { %>
                            <a href="<%= event.eventurl %>" target="_blank" class="btn btn-primary btn-sm mt-2" rel="noopener noreferrer">
                              <i class="bi bi-link-45deg me-1"></i><%= event.eventlinktext || 'Click here' %>
                            </a>
                          <% } %>
                        </div>
                      </div>
                    </div>
                  <% }) %>
                </div>
                <% if (events.length > 9) { %>
                  <div class="text-center mt-4" id="showMoreBtnContainer">
                    <button type="button" class="btn btn-primary" id="showMoreBtn" onclick="showMoreEvents()">
                      <i class="bi bi-chevron-down me-1"></i>Show More Events
                    </button>
                  </div>
                <% } %>
              <% } else { %>
                <div class="row g-4" id="eventsGrid">
                  <% events.forEach((event, index) => { %>
                    <div class="col-md-6 col-lg-4 event-item" data-index="<%= index %>" <% if (index >= 9) { %>style="display: none;"<% } %>>
                      <div class="card h-100 shadow-sm">
                        <div class="card-header-image bg-primary">
                          <div class="card-header-text text-center p-3">
                            <%= event.eventname %>
                          </div>
                        </div>
                        <div class="card-body">
                          <h5 class="card-title"><%= event.eventname %></h5>
                          <p class="card-text mb-2">
                            <i class="bi bi-calendar3 text-primary me-2"></i>
                            <strong>Date:</strong> 
                            <% if (event.starttime) { %>
                              <%= new Date(event.starttime).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %>
                            <% } else { %>
                              TBD
                            <% } %>
                          </p>
                          <p class="card-text mb-2">
                            <i class="bi bi-clock text-primary me-2"></i>
                            <strong>Time:</strong> 
                            <% if (event.starttime && event.endtime) { %>
                              <%= new Date(event.starttime).toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' }) %> - 
                              <%= new Date(event.endtime).toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' }) %>
                            <% } else { %>
                              TBD
                            <% } %>
                          </p>
                          <% if (event.eventlocation) { %>
                            <p class="card-text mb-2">
                              <i class="bi bi-geo-alt text-primary me-2"></i>
                              <strong>Location:</strong> <%= event.eventlocation %>
                            </p>
                          <% } %>
                          <% if (event.eventhost) { %>
                            <p class="card-text mb-2">
                              <i class="bi bi-person text-primary me-2"></i>
                              <strong>Host:</strong> <%= event.eventhost %>
                            </p>
                          <% } %>
                          <% if (event.eventtypename) { %>
                            <% 
                              const typeClassMap = {
                                'Career': 'badge-career',
                                'Networking': 'badge-networking',
                                'Workshop': 'badge-workshop',
                                'Club Meetings': 'badge-club-meetings',
                                'Social': 'badge-social',
                                'Informational': 'badge-informational',
                                'Other': 'badge-other'
                              };
                              const badgeClass = typeClassMap[event.eventtypename] || 'badge-primary';
                            %>
                            <span class="badge <%= badgeClass %> mb-2"><%= event.eventtypename %></span>
                          <% } %>
                          <% if (event.eventdescription) { %>
                            <p class="card-text"><%= event.eventdescription %></p>
                          <% } %>
                          <% if (event.eventurl) { %>
                            <a href="<%= event.eventurl %>" target="_blank" class="btn btn-primary btn-sm w-100 mt-2" rel="noopener noreferrer">
                              <i class="bi bi-link-45deg me-1"></i><%= event.eventlinktext || 'Click here' %>
                            </a>
                          <% } %>
                        </div>
                      </div>
                    </div>
                  <% }) %>
                </div>
                <% if (events.length > 9) { %>
                  <div class="text-center mt-4" id="showMoreBtnContainer">
                    <button type="button" class="btn btn-primary" id="showMoreBtn" onclick="showMoreEvents()">
                      <i class="bi bi-chevron-down me-1"></i>Show More Events
                    </button>
                  </div>
                <% } %>
              <% } %>
            <% } else { %>
              <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                  <i class="bi bi-calendar-x display-1 text-muted mb-3"></i>
                  <h4 class="text-muted mb-3">No events found</h4>
                  <p class="text-muted mb-4">Try adjusting your search criteria or filters to find events.</p>
                  <button type="button" class="btn btn-primary" onclick="clearFilters()">
                    <i class="bi bi-x-circle me-2"></i>Clear All Filters
                  </button>
                </div>
              </div>
            <% } %>
          </div>

          <hr class="my-5">
          <div class="text-center">
            <p class="text-muted mb-3">
              Have an event you would like us to promote?
            </p>
            <a href="<%= submitTarget %>" class="btn btn-outline-primary">
              <i class="bi bi-plus-circle me-2"></i>Submit it here
            </a>
          </div>
        </main>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let currentDisplayCount = 9;
    let showingAll = false;

    function showMoreEvents() {
      const eventItems = document.querySelectorAll('.event-item');
      const newDisplayCount = currentDisplayCount + 9;
      
      let visibleCount = 0;
      eventItems.forEach((item, index) => {
        if (index < newDisplayCount) {
          item.style.display = '';
          visibleCount++;
        }
      });
      
      currentDisplayCount = newDisplayCount;
      
      if (currentDisplayCount >= eventItems.length) {
        document.getElementById('showMoreBtn').parentElement.style.display = 'none';
      }
    }

    function showAllEvents() {
      const eventItems = document.querySelectorAll('.event-item');
      eventItems.forEach(item => {
        item.style.display = '';
      });
      
      showingAll = true;
      currentDisplayCount = eventItems.length;
      document.getElementById('showAllBtn').classList.add('d-none');
      document.getElementById('showLessBtn').classList.remove('d-none');
      document.getElementById('showMoreBtnContainer').style.display = 'none';
    }

    function showLessEvents() {
      const eventItems = document.querySelectorAll('.event-item');
      eventItems.forEach((item, index) => {
        if (index >= 9) {
          item.style.display = 'none';
        } else {
          item.style.display = '';
        }
      });
      
      showingAll = false;
      currentDisplayCount = 9;
      document.getElementById('showAllBtn').classList.remove('d-none');
      document.getElementById('showLessBtn').classList.add('d-none');
      if (eventItems.length > 9) {
        document.getElementById('showMoreBtnContainer').style.display = 'block';
      }
    }

    function submitFilters() {
      const params = new URLSearchParams();
      const startDate = document.getElementById('startDate').value;
      const endDate = document.getElementById('endDate').value;
      const formatInput = document.getElementById('format');
      const sortInput = document.getElementById('sort');
      const searchInput = document.getElementById('searchInput');
      const formatValue = formatInput ? formatInput.value : 'grid';
      const sortValue = sortInput ? sortInput.value : 'asc';
      const searchValue = searchInput ? searchInput.value.trim() : '';

      if (startDate) params.append('startDate', startDate);
      if (endDate) params.append('endDate', endDate);

      const checkboxes = document.querySelectorAll('input[name="categories"]:checked');
      checkboxes.forEach(cb => {
        params.append('categories', cb.value);
      });

      params.append('format', formatValue);
      params.append('sort', sortValue);

      if (searchValue) {
        params.append('search', searchValue);
      }

      const queryString = params.toString();
      const targetUrl = '/events' + (queryString ? `?${queryString}` : '');
      window.location.href = targetUrl;
    }

    function clearFilters() {
      const formatValue = document.getElementById('format').value || 'grid';
      const sortValue = document.getElementById('sort').value || 'asc';
      window.location.href = `/events?format=${formatValue}&sort=${sortValue}`;
    }

    function setFormat(format) {
      const formatInput = document.getElementById('format');
      if (!formatInput || formatInput.value === format) {
        return;
      }
      formatInput.value = format;
      submitFilters();
    }

    function setSort(sortValue) {
      const sortInput = document.getElementById('sort');
      if (!sortInput || sortInput.value === sortValue) {
        return;
      }
      sortInput.value = sortValue;
      submitFilters();
    }

    document.addEventListener('DOMContentLoaded', function() {
      document.getElementById('filterForm').addEventListener('submit', function(event) {
        event.preventDefault();
        submitFilters();
      });

      document.getElementById('startDate').addEventListener('change', submitFilters);
      document.getElementById('endDate').addEventListener('change', submitFilters);

      document.querySelectorAll('input[name="categories"][type="checkbox"]').forEach(cb => {
        cb.addEventListener('change', submitFilters);
      });

      const formatButtons = document.querySelectorAll('[data-format-toggle]');
      formatButtons.forEach(button => {
        button.addEventListener('click', function() {
          formatButtons.forEach(btn => {
            btn.classList.remove('btn-primary');
            btn.classList.add('btn-outline-primary');
          });
          button.classList.remove('btn-outline-primary');
          button.classList.add('btn-primary');
          setFormat(button.dataset.formatToggle);
        });
      });

      const sortButtons = document.querySelectorAll('[data-sort-toggle]');
      sortButtons.forEach(button => {
        button.addEventListener('click', function() {
          sortButtons.forEach(btn => {
            btn.classList.remove('btn-primary');
            btn.classList.add('btn-outline-primary');
          });
          button.classList.remove('btn-outline-primary');
          button.classList.add('btn-primary');
          setSort(button.dataset.sortToggle);
        });
      });
    });
  </script>
</body>
</html>
