<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Event - IS Event Calendar</title>
  <!-- Bootstrap 5.3.3 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/custom.css">
  <style>
    body {
      background-color: #f8f9fa;
      min-height: 100vh;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark navbar-gradient shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/">
        <i class="bi bi-calendar-event me-2"></i>IS Event Calendar - Admin
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/events">
              <i class="bi bi-calendar3 me-1"></i>View Public Events
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/dashboard">
              <i class="bi bi-speedometer2 me-1"></i>Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">
              <i class="bi bi-box-arrow-right me-1"></i>Logout
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card shadow">
          <div class="card-body p-4">
            <div class="mb-4">
              <a href="/admin/dashboard" class="text-decoration-none mb-3 d-inline-block">
                <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
              </a>
              <h2 class="mb-2">
                <i class="bi bi-pencil text-primary me-2"></i>Edit Event
              </h2>
            </div>
            
            <% if (typeof error_message !== 'undefined' && error_message) { %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i><%= error_message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            <% } %>

            <form action="/admin/edit/<%= event.eventid %>" method="POST" enctype="multipart/form-data">
              <div class="row g-3">
                <div class="col-12">
                  <label for="eventName" class="form-label">
                    Event Name <span class="text-danger">*</span>
                  </label>
                  <input type="text" class="form-control" id="eventName" name="eventName" value="<%= event.eventname %>" required>
                </div>

                <div class="col-12">
                  <label for="eventDescription" class="form-label">Description</label>
                  <textarea class="form-control" id="eventDescription" name="eventDescription" rows="4" placeholder="Enter event description (optional)"><%= event.eventdescription || '' %></textarea>
                </div>

                <div class="col-md-6">
                  <label for="startTime" class="form-label">
                    Start Time <span class="text-danger">*</span>
                  </label>
                  <input type="datetime-local" class="form-control" id="startTime" name="startTime" value="<%= event.starttime ? new Date(event.starttime).toISOString().slice(0, 16) : '' %>" required>
                </div>

                <div class="col-md-6">
                  <label for="endTime" class="form-label">
                    End Time <span class="text-danger">*</span>
                  </label>
                  <input type="datetime-local" class="form-control" id="endTime" name="endTime" value="<%= event.endtime ? new Date(event.endtime).toISOString().slice(0, 16) : '' %>" required>
                </div>

                <div class="col-md-6">
                  <label for="eventLocation" class="form-label">
                    Location <span class="text-danger">*</span>
                  </label>
                  <input type="text" class="form-control" id="eventLocation" name="eventLocation" value="<%= event.eventlocation || '' %>" required placeholder="Enter event location">
                </div>

                <div class="col-md-6">
                  <label for="eventHost" class="form-label">Host</label>
                  <input type="text" class="form-control" id="eventHost" name="eventHost" value="<%= event.eventhost || '' %>" placeholder="Enter event host (optional)">
                </div>

                <div class="col-md-6">
                  <label for="eventurl" class="form-label">Event Link/URL</label>
                  <input type="url" class="form-control" id="eventurl" name="eventurl" value="<%= event.eventurl || '' %>" placeholder="Enter event URL (e.g., RSVP link) (optional)">
                </div>

                <div class="col-md-6">
                  <label for="eventlinktext" class="form-label">Link Text (Optional)</label>
                  <input type="text" class="form-control" id="eventlinktext" name="eventlinktext" value="<%= event.eventlinktext || '' %>" placeholder="Enter custom text for the link (e.g., 'RSVP Now', 'Register Here') (optional)">
                  <div class="form-text">Leave blank to use "Click here" as default</div>
                </div>

                <div class="col-12">
                  <label for="eventimage" class="form-label">Event Image</label>
                  <% if (event.eventimagepath) { %>
                    <div class="mb-3">
                      <p class="text-muted small mb-2">Current image:</p>
                      <img src="<%= event.eventimagepath %>" alt="Event image" class="img-thumbnail" style="max-width: 300px; max-height: 200px;">
                    </div>
                  <% } %>
                  <input type="file" class="form-control" id="eventimage" name="eventimage" accept="image/*">
                  <div class="form-text">Optional: Upload a new image to replace the current one (jpg, jpeg, png, gif, max 5MB)</div>
                </div>

                <div class="col-12">
                  <label for="eventTypeID" class="form-label">
                    Event Type <span class="text-danger">*</span>
                  </label>
                  <select class="form-select" id="eventTypeID" name="eventTypeID" required>
                    <% if (eventTypes && eventTypes.length > 0) { %>
                      <% eventTypes.forEach(type => { %>
                        <option value="<%= type.eventtypeid %>" <%= event.eventtypeid == type.eventtypeid ? 'selected' : '' %>>
                          <%= type.eventtypename %>
                        </option>
                      <% }) %>
                    <% } else { %>
                      <option value="<%= event.eventtypeid %>" selected>No event types available</option>
                    <% } %>
                  </select>
                  <% if (!eventTypes || eventTypes.length === 0) { %>
                    <div class="alert alert-warning mt-2">
                      <i class="bi bi-exclamation-triangle me-2"></i>Warning: No event types found in database.
                    </div>
                  <% } %>
                </div>

                <div class="col-12">
                  <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-check-circle me-2"></i>Update Event
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
