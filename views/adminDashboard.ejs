<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - IS Event Calendar</title>
  <!-- Bootstrap 5.3.3 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/custom.css">
  <style>
    body {
      background-color: #f8f9fa;
    }
  </style>
</head>
<body>
  <% const pendingBadgeCount = typeof pendingCount === 'number' ? pendingCount : 0; %>
  
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark navbar-gradient shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/">
        <i class="bi bi-calendar-event me-2"></i>IS Event Calendar - Admin
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/events">
              <i class="bi bi-calendar3 me-1"></i>View Public Events
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">
              <i class="bi bi-box-arrow-right me-1"></i>Logout
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="mb-0">
        <i class="bi bi-speedometer2 me-2"></i>Manage Events
      </h2>
      <a href="/admin/create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Create New Event
      </a>
    </div>

    <!-- Search Bar -->
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <div class="input-group input-group-lg">
          <span class="input-group-text">
            <i class="bi bi-search"></i>
          </span>
          <input type="text" 
                 class="form-control" 
                 id="adminSearchInput" 
                 placeholder="Search events by name, location, host, type, or submitter email..." 
                 aria-label="Search events">
          <button class="btn btn-outline-secondary" type="button" id="clearSearchBtn" style="display: none;">
            <i class="bi bi-x-circle"></i> Clear
          </button>
        </div>
        <div class="mt-2">
          <small class="text-muted">
            <i class="bi bi-info-circle me-1"></i>
            Search filters across all tabs and updates in real-time
          </small>
        </div>
      </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-4" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming-events" type="button" role="tab">
          <i class="bi bi-calendar-check me-1"></i>Upcoming Events
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="past-tab" data-bs-toggle="tab" data-bs-target="#past-events" type="button" role="tab">
          <i class="bi bi-calendar-x me-1"></i>Past Events
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="submitted-tab" data-bs-toggle="tab" data-bs-target="#submitted-events" type="button" role="tab">
          <i class="bi bi-inbox me-1"></i>Submitted Events
          <% if (pendingBadgeCount > 0) { %>
            <span class="badge bg-danger rounded-pill ms-1"><%= pendingBadgeCount %></span>
          <% } %>
        </button>
      </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content">
      <!-- Upcoming Events Tab -->
      <div class="tab-pane fade show active" id="upcoming-events" role="tabpanel">
        <div class="card shadow-sm">
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="table-dark">
                  <tr>
                    <th>Name</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Location</th>
                    <th>Host</th>
                    <th>Type</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (upcomingEvents && upcomingEvents.length > 0) { %>
                    <% upcomingEvents.forEach(event => { %>
                      <tr class="searchable-row" 
                          data-search="<%= (event.eventname || '').toLowerCase() %> <%= (event.eventlocation || '').toLowerCase() %> <%= (event.eventhost || '').toLowerCase() %> <%= (event.typename || '').toLowerCase() %> <%= (event.starttime ? new Date(event.starttime).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: '2-digit' }) : '').toLowerCase() %>">
                        <td><strong><%= event.eventname %></strong></td>
                        <td><%= event.starttime ? new Date(event.starttime).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: '2-digit' }) : 'N/A' %></td>
                        <td><%= event.endtime ? new Date(event.endtime).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: '2-digit' }) : 'N/A' %></td>
                        <td><%= event.eventlocation || 'N/A' %></td>
                        <td><%= event.eventhost || 'N/A' %></td>
                        <td><span class="badge bg-info"><%= event.typename || 'N/A' %></span></td>
                        <td>
                          <div class="btn-group btn-group-sm" role="group">
                            <a href="/admin/edit/<%= event.eventid %>" class="btn btn-primary">
                              <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form action="/admin/delete/<%= event.eventid %>" method="POST" class="d-inline">
                              <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this event?');">
                                <i class="bi bi-trash"></i> Delete
                              </button>
                            </form>
                          </div>
                        </td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr class="empty-state-row">
                      <td colspan="7" class="text-center py-5">
                        <i class="bi bi-inbox display-4 text-muted"></i>
                        <p class="mt-3 text-muted">No upcoming events found.</p>
                        <a href="/admin/create" class="btn btn-primary">
                          <i class="bi bi-plus-circle me-2"></i>Create your first event
                        </a>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- Past Events Tab -->
      <div class="tab-pane fade" id="past-events" role="tabpanel">
        <div class="card shadow-sm">
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="table-dark">
                  <tr>
                    <th>Name</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Location</th>
                    <th>Host</th>
                    <th>Type</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (pastEvents && pastEvents.length > 0) { %>
                    <% pastEvents.forEach(event => { %>
                      <tr class="searchable-row" 
                          data-search="<%= (event.eventname || '').toLowerCase() %> <%= (event.eventlocation || '').toLowerCase() %> <%= (event.eventhost || '').toLowerCase() %> <%= (event.typename || '').toLowerCase() %> <%= (event.starttime ? new Date(event.starttime).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: '2-digit' }) : '').toLowerCase() %>">
                        <td><strong><%= event.eventname %></strong></td>
                        <td><%= event.starttime ? new Date(event.starttime).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: '2-digit' }) : 'N/A' %></td>
                        <td><%= event.endtime ? new Date(event.endtime).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: '2-digit' }) : 'N/A' %></td>
                        <td><%= event.eventlocation || 'N/A' %></td>
                        <td><%= event.eventhost || 'N/A' %></td>
                        <td><span class="badge bg-info"><%= event.typename || 'N/A' %></span></td>
                        <td>
                          <div class="btn-group btn-group-sm" role="group">
                            <a href="/admin/edit/<%= event.eventid %>" class="btn btn-primary">
                              <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form action="/admin/delete/<%= event.eventid %>" method="POST" class="d-inline">
                              <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this event?');">
                                <i class="bi bi-trash"></i> Delete
                              </button>
                            </form>
                          </div>
                        </td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr class="empty-state-row">
                      <td colspan="7" class="text-center py-5">
                        <i class="bi bi-inbox display-4 text-muted"></i>
                        <p class="mt-3 text-muted">No past events found.</p>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- Submitted Events Tab -->
      <div class="tab-pane fade" id="submitted-events" role="tabpanel">
        <div class="mb-4">
          <h5 class="mb-3">
            <i class="bi bi-clock-history me-2"></i>Pending Submissions
          </h5>
          <div class="card shadow-sm">
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table table-hover mb-0">
                  <thead class="table-dark">
                    <tr>
                      <th>Name</th>
                      <th>Start</th>
                      <th>End</th>
                      <th>Type</th>
                      <th>Submitted By</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (pendingSubmissions && pendingSubmissions.length > 0) { %>
                      <% pendingSubmissions.forEach(submission => { %>
                        <tr class="searchable-row" 
                            data-search="<%= (submission.eventname || '').toLowerCase() %> <%= (submission.typename || '').toLowerCase() %> <%= (submission.submitterEmail || '').toLowerCase() %> <%= (submission.starttime ? new Date(submission.starttime).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: '2-digit' }) : '').toLowerCase() %>">
                          <td><strong><%= submission.eventname %></strong></td>
                          <td><%= submission.starttime ? new Date(submission.starttime).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: '2-digit' }) : 'N/A' %></td>
                          <td><%= submission.endtime ? new Date(submission.endtime).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: '2-digit' }) : 'N/A' %></td>
                          <td><span class="badge bg-info"><%= submission.typename || 'N/A' %></span></td>
                          <td><%= submission.submitterEmail || 'N/A' %></td>
                          <td>
                            <div class="btn-group btn-group-sm" role="group">
                              <form action="/admin/submissions/<%= submission.submissionid %>/approve" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-success">
                                  <i class="bi bi-check-circle"></i> Approve
                                </button>
                              </form>
                              <form action="/admin/submissions/<%= submission.submissionid %>/deny" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Deny this submission?');">
                                  <i class="bi bi-x-circle"></i> Deny
                                </button>
                              </form>
                            </div>
                          </td>
                        </tr>
                      <% }) %>
                    <% } else { %>
                      <tr class="empty-state-row">
                        <td colspan="6" class="text-center py-5">
                          <i class="bi bi-check-circle display-4 text-success"></i>
                          <p class="mt-3 text-muted">No pending submissions at the moment.</p>
                        </td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <div>
          <h5 class="mb-3">
            <i class="bi bi-x-circle me-2"></i>Denied Submissions
          </h5>
          <div class="card shadow-sm">
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table table-hover mb-0">
                  <thead class="table-dark">
                    <tr>
                      <th>Name</th>
                      <th>Start</th>
                      <th>End</th>
                      <th>Type</th>
                      <th>Submitted By</th>
                      <th>Status</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (deniedSubmissions && deniedSubmissions.length > 0) { %>
                      <% deniedSubmissions.forEach(submission => { %>
                        <tr class="searchable-row" 
                            data-search="<%= (submission.eventname || '').toLowerCase() %> <%= (submission.typename || '').toLowerCase() %> <%= (submission.submitterEmail || '').toLowerCase() %> <%= (submission.starttime ? new Date(submission.starttime).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: '2-digit' }) : '').toLowerCase() %>">
                          <td><strong><%= submission.eventname %></strong></td>
                          <td><%= submission.starttime ? new Date(submission.starttime).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: '2-digit' }) : 'N/A' %></td>
                          <td><%= submission.endtime ? new Date(submission.endtime).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: '2-digit' }) : 'N/A' %></td>
                          <td><span class="badge bg-info"><%= submission.typename || 'N/A' %></span></td>
                          <td><%= submission.submitterEmail || 'N/A' %></td>
                          <td><span class="badge bg-danger"><%= submission.status %></span></td>
                        </tr>
                      <% }) %>
                    <% } else { %>
                      <tr class="empty-state-row">
                        <td colspan="6" class="text-center py-5">
                          <i class="bi bi-inbox display-4 text-muted"></i>
                          <p class="mt-3 text-muted">No denied submissions yet.</p>
                        </td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Real-time search functionality
    document.addEventListener('DOMContentLoaded', function() {
      const searchInput = document.getElementById('adminSearchInput');
      const clearBtn = document.getElementById('clearSearchBtn');
      
      function performSearch() {
        const searchTerm = searchInput.value.toLowerCase().trim();
        const allRows = document.querySelectorAll('.searchable-row');
        const emptyStateRows = document.querySelectorAll('.empty-state-row');
        let visibleCount = 0;
        
        // Hide empty state rows when searching
        emptyStateRows.forEach(row => {
          row.style.display = searchTerm ? 'none' : '';
        });
        
        // Filter searchable rows
        allRows.forEach(row => {
          const searchData = row.getAttribute('data-search') || '';
          if (searchTerm === '' || searchData.includes(searchTerm)) {
            row.style.display = '';
            visibleCount++;
          } else {
            row.style.display = 'none';
          }
        });
        
        // Show/hide clear button
        clearBtn.style.display = searchTerm ? 'block' : 'none';
        
        // Show "no results" message if needed
        showNoResultsMessages(searchTerm, visibleCount);
      }
      
      function showNoResultsMessages(searchTerm, visibleCount) {
        // Get all table bodies
        const tableBodies = document.querySelectorAll('tbody');
        
        tableBodies.forEach(tbody => {
          // Check if this tbody has searchable rows
          const searchableRows = tbody.querySelectorAll('.searchable-row');
          if (searchableRows.length === 0) return; // Skip if no searchable rows
          
          // Remove existing no-results messages
          const existingNoResults = tbody.querySelector('.no-results-message');
          if (existingNoResults) {
            existingNoResults.remove();
          }
          
          // Count visible rows in this tbody
          let visibleInThisTable = 0;
          searchableRows.forEach(row => {
            if (row.style.display !== 'none') {
              visibleInThisTable++;
            }
          });
          
          // Add no results message if search term exists and no visible rows
          if (searchTerm && visibleInThisTable === 0) {
            const noResultsRow = document.createElement('tr');
            noResultsRow.className = 'no-results-message';
            const colCount = tbody.querySelector('tr') ? tbody.querySelector('tr').cells.length : 7;
            noResultsRow.innerHTML = `
              <td colspan="${colCount}" class="text-center py-4">
                <i class="bi bi-search display-6 text-muted"></i>
                <p class="mt-2 text-muted mb-0">No events found matching "${searchTerm}"</p>
              </td>
            `;
            tbody.appendChild(noResultsRow);
          }
        });
      }
      
      // Search on input (each keystroke)
      searchInput.addEventListener('input', performSearch);
      
      // Clear search
      clearBtn.addEventListener('click', function() {
        searchInput.value = '';
        performSearch();
        searchInput.focus();
      });
      
      // Highlight search terms in results (optional enhancement)
      function highlightSearchTerm() {
        const searchTerm = searchInput.value.trim();
        if (searchTerm.length < 2) return;
        
        const allRows = document.querySelectorAll('.searchable-row:not([style*="display: none"])');
        allRows.forEach(row => {
          row.querySelectorAll('td').forEach(cell => {
            const originalText = cell.textContent;
            const regex = new RegExp(`(${searchTerm})`, 'gi');
            if (regex.test(originalText)) {
              cell.innerHTML = originalText.replace(regex, '<mark>$1</mark>');
            }
          });
        });
      }
    });
  </script>
</body>
</html>
