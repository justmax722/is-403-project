<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Search Result</title>
  <!-- Bootstrap 5.3.3 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/custom.css">
  <style>
    body {
      background-color: #faf8f5;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark navbar-gradient shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/">
        <i class="bi bi-calendar-event me-2"></i>IS Event Calendar
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/events">
              <i class="bi bi-arrow-left me-1"></i>Back to List
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">
              <i class="bi bi-box-arrow-right me-1"></i>Logout
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h4 mb-0">
        <i class="bi bi-search me-2"></i>Search Result
      </h1>
    </div>

    <% if (typeof error_message !== 'undefined' && error_message) { %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i><%= error_message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } else if (pokemon) { %>
      <div class="card shadow-sm">
        <div class="card-body">
          <h3 class="card-title mb-1"><%= pokemon.description %></h3>
          <p class="mb-0"><strong>Base Total:</strong> <%= pokemon.base_total %></p>
        </div>
      </div>
    <% } else { %>
      <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>No result to display.
      </div>
    <% } %>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
