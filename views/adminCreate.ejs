<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Event - IS Event Calendar</title>
  <!-- Bootstrap 5.3.3 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/custom.css">
  <style>
    body {
      background-color: #f8f9fa;
      min-height: 100vh;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark navbar-gradient shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/">
        <i class="bi bi-calendar-event me-2"></i>IS Event Calendar - Admin
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/events">
              <i class="bi bi-calendar3 me-1"></i>View Public Events
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/dashboard">
              <i class="bi bi-speedometer2 me-1"></i>Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">
              <i class="bi bi-box-arrow-right me-1"></i>Logout
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card shadow">
          <div class="card-body p-4">
            <% const safeFormData = typeof formData !== 'undefined' ? formData : {}; %>
            <div class="mb-4">
              <h2 class="mb-2">
                <i class="bi bi-plus-circle text-primary me-2"></i>Create New Event
              </h2>
              <p class="text-muted">Use the same polished layout that submitters see for consistency.</p>
            </div>

            <% if (typeof error_message !== 'undefined' && error_message) { %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i><%= error_message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            <% } %>

            <form action="/admin/create" method="POST">
              <div class="row g-3">
                <div class="col-12">
                  <label for="eventName" class="form-label">
                    Event Name <span class="text-danger">*</span>
                  </label>
                  <input type="text" class="form-control" id="eventName" name="eventName" required value="<%= safeFormData.eventName || '' %>">
                </div>

                <div class="col-12">
                  <label for="eventDescription" class="form-label">Description</label>
                  <textarea class="form-control" id="eventDescription" name="eventDescription" rows="4" placeholder="Enter event description (optional)"><%= safeFormData.eventDescription || '' %></textarea>
                </div>

                <div class="col-md-6">
                  <label for="startTime" class="form-label">
                    Start Time <span class="text-danger">*</span>
                  </label>
                  <input type="datetime-local" class="form-control" id="startTime" name="startTime" required value="<%= safeFormData.startTime || '' %>">
                </div>

                <div class="col-md-6">
                  <label for="endTime" class="form-label">
                    End Time <span class="text-danger">*</span>
                  </label>
                  <input type="datetime-local" class="form-control" id="endTime" name="endTime" required value="<%= safeFormData.endTime || '' %>">
                </div>

                <div class="col-md-6">
                  <label for="eventLocation" class="form-label">
                    Location <span class="text-danger">*</span>
                  </label>
                  <input type="text" class="form-control" id="eventLocation" name="eventLocation" required placeholder="Enter event location" value="<%= safeFormData.eventLocation || '' %>">
                </div>

                <div class="col-md-6">
                  <label for="eventHost" class="form-label">Host</label>
                  <input type="text" class="form-control" id="eventHost" name="eventHost" placeholder="Enter event host (optional)" value="<%= safeFormData.eventHost || '' %>">
                </div>

                <div class="col-md-6">
                  <label for="eventurl" class="form-label">Event Link/URL</label>
                  <input type="url" class="form-control" id="eventurl" name="eventurl" placeholder="Enter event URL (optional)" value="<%= safeFormData.eventurl || '' %>">
                </div>

                <div class="col-md-6">
                  <label for="eventlinktext" class="form-label">Link Text (Optional)</label>
                  <input type="text" class="form-control" id="eventlinktext" name="eventlinktext" placeholder="Enter custom link text (optional)" value="<%= safeFormData.eventlinktext || '' %>">
                  <div class="form-text">Leave blank to default to "Click here".</div>
                </div>

                <div class="col-12">
                  <label for="eventTypeID" class="form-label">
                    Event Type <span class="text-danger">*</span>
                  </label>
                  <select class="form-select" id="eventTypeID" name="eventTypeID" required>
                    <option value="" <%= !safeFormData.eventTypeID ? 'selected' : '' %>>-- Select Event Type --</option>
                    <% if (eventTypes && eventTypes.length > 0) { %>
                      <% eventTypes.forEach(type => { %>
                        <% const isSelected = safeFormData.eventTypeID && safeFormData.eventTypeID.toString() === type.eventtypeid.toString(); %>
                        <option value="<%= type.eventtypeid %>" <%= isSelected ? 'selected' : '' %>><%= type.eventtypename %></option>
                      <% }) %>
                    <% } else { %>
                      <option value="">No event types available</option>
                    <% } %>
                  </select>
                  <% if (!eventTypes || eventTypes.length === 0) { %>
                    <div class="alert alert-warning mt-2">
                      <i class="bi bi-exclamation-triangle me-2"></i>Warning: No event types detected. Please add one before creating events.
                    </div>
                  <% } %>
                </div>

                <div class="col-12">
                  <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-check-circle me-2"></i>Create Event
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
