<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Create Event</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h2>Create New Event</h2>
    <a href="/admin/dashboard" class="btn" style="margin-bottom: 20px;">‚Üê Back to Dashboard</a>
    
    <% if (typeof error_message !== 'undefined' && error_message) { %>
      <div style="background-color: #f8d7da; color: #721c24; padding: 12px; border-radius: 4px; margin-bottom: 20px; border: 1px solid #f5c6cb;">
        <%= error_message %>
      </div>
    <% } %>
    
    <form action="/admin/create" method="POST" class="form">
      <label>Event Name</label>
      <input type="text" name="eventName" required>

      <label>Description</label>
      <textarea name="eventDescription"></textarea>

      <label>Start Time</label>
      <input type="datetime-local" name="startTime" required>

      <label>End Time</label>
      <input type="datetime-local" name="endTime" required>

      <label>Location</label>
      <input type="text" name="eventLocation">

      <label>Host</label>
      <input type="text" name="eventHost">

      <label>Event Type</label>
      <select name="eventTypeID" required>
        <% if (eventTypes && eventTypes.length > 0) { %>
          <% eventTypes.forEach(type => { %>
            <option value="<%= type.eventtypeid %>"><%= type.eventtypename %></option>
          <% }) %>
        <% } else { %>
          <option value="">No event types available</option>
        <% } %>
      </select>
      <% if (!eventTypes || eventTypes.length === 0) { %>
        <p style="color: red; font-size: 0.9em;">Warning: No event types found in database. Please add event types first.</p>
      <% } %>

      <button type="submit" class="btn">Create Event</button>
    </form>
  </div>
</body>
</html>
