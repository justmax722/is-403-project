<!DOCTYPE html>
<html lang="en">
<head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Pokemon Dashboard</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
                body { background-color: #f8f9fa; padding-top: 2rem; }
                .welcome-card { max-width: 900px; margin: 0 auto; padding: 1.5rem; border-radius: .75rem; background:#fff; box-shadow:0 0.25rem 0.75rem rgba(0,0,0,0.06); }
        </style>
        </head>
<body>
    <div class="container">
        <div class="welcome-card">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h1 class="h4 text-success">Pokemon Dashboard (Generation 1)</h1>
                    <p class="mb-0">Logged in as <strong><%= username || 'user' %></strong></p>
                </div>
                <div>
                    <a href="/logout" class="btn btn-sm btn-danger">Logout</a>
                </div>
            </div>

            <% if (typeof error_message !== 'undefined' && error_message) { %>
                <div class="alert alert-warning"><%= error_message %></div>
            <% } %>

            <!-- Search form -->
            <form action="/" method="POST" class="row g-2 mb-3">
                <div class="col-sm-9">
                    <input name="name" class="form-control" placeholder="Enter pokemon name (e.g. Pikachu)" />
                </div>
                <div class="col-sm-3">
                    <button class="btn btn-primary w-100" type="submit">Search Pokemon</button>
                </div>
            </form>

            <!-- Search result is shown on a separate page per project requirements -->

            <!-- Full pokemon table -->
            <div class="card">
                <div class="card-body p-0">
                    <table class="table table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width:80px;">ID</th>
                                <th>Name</th>
                                <th style="width:140px;">Base Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (pokemon && pokemon.length) { %>
                                <% pokemon.forEach(p => { %>
                                    <tr>
                                        <td><%= p.id %></td>
                                        <td><%= p.description %></td>
                                        <td><%= p.base_total %></td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="3" class="text-center py-3">No pokemon found.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>